@model AddressItem
@{
    ViewBag.Title = "Edit";
    Layout = "_Layout";
}
<div asp-validation-summary="All">
</div>
<form asp-action="Edit" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="FullName">Id</label>
        <input type="number" class="form-control" asp-for="Id" value="@Model.Id" disabled="disabled">
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FullName">Full name</label>
        <input type="text" class="form-control" asp-for="FullName" value="@Model.FullName" 
               placeholder="Enter your name">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="email" class="form-control" asp-for="Email" value="@Model.Email" 
               placeholder="Enter your email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone number</label>
        <input type="tel" class="form-control" asp-for="PhoneNumber" value="@Model.PhoneNumber" 
               placeholder="Enter your phone number">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhysicalAddress">Physical address</label>
        <input type="tel" class="form-control" asp-for="PhysicalAddress" value="@Model.PhysicalAddress" 
               placeholder="Enter your pysical address">
        <span asp-validation-for="PhysicalAddress" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
</form>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
    <script src="~/js/ValidationSettings.js"></script>
}